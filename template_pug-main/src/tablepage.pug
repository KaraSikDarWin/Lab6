block content
  table(border="1" cellpadding="3")
    thead
      tr
        th Номер
        th Имя и фамилия
        th 1
        th 2
        th 3
        th 4
        th 5
        th Среднее
    tbody
      each student, index in students
        tr
          td #{index}
          td #{student.name}
          td #{student.scores[0]}
          td #{student.scores[1]}
          td #{student.scores[2]}
          td #{student.scores[3]}
          td #{student.scores[4]}
          td #{student.average}	  
  .filters
    details
      summary Функции таблицы
      form
        input(type="submit" value="Сортировать по лучшей сборке")
      h3 Найти лучшее время
      form
        label Введите имя:
          input(type="text" id="namebest" name="namebest")
      input(type="submit" value="Поиск")

      h3 Максимальное среднее время:
      form
        label Введите верхний порог времени:
          input(type="number" min="10")
      input(type="submit" value="Отфильтровать")

    details
      summary График
      form.radio-group
        input(type="radio" name="avf" id="avf") 
        | Среднее время
        input(type="radio" name="bf" id="bf") 
        | Лучшее время
        input(type="checkbox" name="bstf" id="bstf") 
        | Лучшее время
        input(type="checkbox" name="baf" id="baf") 
        | Худшее время
      input(type="submit" value="Построить график")